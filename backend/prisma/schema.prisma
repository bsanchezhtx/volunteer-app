datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String
  role           String
  profile        Profile?
  notifications  Notification[]
  history        History[]
}

model Profile {
  id           Int     @id @default(autoincrement())
  fullName     String
  addr1        String
  addr2        String?
  city         String
  state        String
  zip          String
  skills       String      
  preferences  String?
  availability String      
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int         @unique
}

model Event {
  id             Int       @id @default(autoincrement())
  name           String
  description    String
  location       String
  requiredSkills String    
  urgency        Int
  date           String
  history        History[] 
}

model Notification {
  id      Int     @id @default(autoincrement())
  text    String
  read    Boolean @default(false)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  Int
}

model History {
  id             Int      @id @default(autoincrement())
  status         String
  participatedAt DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         Int
  event          Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId        Int
}

model State {
  code String @id
  name String
}
